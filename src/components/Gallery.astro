---
interface Props {
  images: string[];
  title?: string;
  baseAlt?: string;
}
const { images, title = "Galer√≠a", baseAlt = "Imagen" } = Astro.props;
if (!images || images.length === 0) return null;
---
<section class="mt-12">
  <h2 class="text-2xl font-semibold dark:text-white mb-4">{title}</h2>
  <div class="grid gap-4 sm:grid-cols-2">
    {images.map((src, i) => (
      <figure class="rounded-lg overflow-hidden border border-neutral-300 dark:border-neutral-700 bg-neutral-50 dark:bg-neutral-900">
        <img
          src={src}
          alt={`${baseAlt} ${i + 1}`}
          class="w-full h-full object-cover"
          loading="lazy"
          decoding="async"
        />
      </figure>
    ))}
  </div>
</section>